{
  "manifest_version": 2,
  "author": "Chris Sparshott",
  "name": "Pokemon No Show",
  "version": "0.0.3",
  "description": "'Pokemon No Show' is a social network content blocker specifically aimed at Pokemon Go posts on Facebook and Twitter",
  "icons": {
    "16": "assets/images/icon_16.png",
    "48": "assets/images/icon_48.png",
    "128": "assets/images/icon_128.png"
  },
  "browser_action": {
    "default_icon": "assets/images/icon_128.png"
  },
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/jquery.min.js",
        "content.js"
      ]
    }
  ]
}
